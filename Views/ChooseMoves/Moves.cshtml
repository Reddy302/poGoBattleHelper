                    else if (Model.ChosenPoke.Name.ToLower().Contains("giratina origin"))
                    {
                        modifier = "33";
                    }
                    else if (Model.ChosenPoke.Name.ToLower().Contains("shaymin land"))
                    {
                        modifier = "34";
                    }
                    else if (Model.ChosenPoke.Name.ToLower().Contains("shaymin sky"))
                    {
                        modifier = "35";
                    }
                    else if (Model.ChosenPoke.Name.ToLower().Contains("alola"))
                    {
                        modifier = "61";
                    }
                    else if (Model.ChosenPoke.Name.ToLower().Contains("galar"))
                    {
                        modifier = "31";
                    }
                    else if (Model.ChosenPoke.Name.ToLower().Contains("mega"))
                    {
                        modifier = "51";
                    }
                    else
                    {
                        modifier = "00";
                    }

                    @{string dex = Model.ChosenPoke.Dex.ToString("D3");}

                    <td class="p-3">
                        <div class="p-3 text-center">
                            <img class="py-0" src="~/images/pokes/pokemon_icon_@(dex)_@(modifier).png" alt="@Model.ChosenPoke.Name" style="height: 180px; max-width: 200px" />
